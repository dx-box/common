{
  "name": "@dx-box/common",
  "version": "1.0.0",
  "description": "(DX) by providing common configurations for TypeScript, ESLint, Prettier, and automated Git hooks for formatting and linting.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "templates",
    "scripts",
    "dx.config.ts"
  ],
